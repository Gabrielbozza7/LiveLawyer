generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id           BigInt    @id @default(autoincrement())
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  last_name    String
  first_name   String
  email        String    @unique
  accType      UserType  @default(Civilian)
  phoneNum     String
  profPicUrl   String?
  twilioToken  String?
  emerContacts Contact[]
}

model Contact {
  id         BigInt    @id @default(autoincrement())
  last_name  String
  first_name String
  picUrl     String?
  phoneNum   String
  email      String?
  type       UserType?
  userId     BigInt?
  user       User?     @relation(fields: [userId], references: [id])
}

model LawOffice {
  id          BigInt  @id @default(autoincrement())
  name        String
  description String?
  address     String
  phoneNum    String
  email       String  @unique
  picUrl      String?
}

enum UserType {
  Paralegal
  Lawyer
  Civilian
  Dev
}
