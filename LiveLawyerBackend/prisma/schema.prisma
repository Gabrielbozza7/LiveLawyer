generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  lastName     String
  firstName    String
  profPicUrl   String?
  phoneNum     String
  email        String    @unique
  userType     UserType  @default(Civilian)
  emerContacts Contact[]
  sessionToken String?
  dateJoined   DateTime  @default(now())
}

model Contact {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId     String?  @db.Uuid
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastName   String
  firstName  String
  picUrl     String?
  phoneNum   String
  email      String?
  type       UserType?
}

model Lawyer {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?
  address     String
  phoneNum    String
  email       String   @unique
  picUrl      String?
}

enum UserType {
  Paralegal
  Lawyer
  Civilian
  Dev
}
